{
  "name": "@mindfiredigital/react-canvas-editor",
  "version": "0.0.0-development",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "typings": "./dist/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "build-lib": "rm -rf dist && npm cache clean --force && rollup -c",
    "publish-locally": "npx yalc publish",
    "build": "npm run build-lib && npm run publish-locally",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^8.3.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-essentials": "^7.4.6",
    "@storybook/addon-interactions": "^7.4.6",
    "@storybook/addon-links": "^7.4.6",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.4.6",
    "@storybook/react": "^7.4.6",
    "@storybook/react-webpack5": "^7.4.6",
    "@storybook/testing-library": "^0.2.2",
    "@types/node": "^16.18.34",
    "@types/react": "^18.2.8",
    "@types/react-color": "^3.0.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "git-format-staged": "^3.0.0",
    "husky": "^9.0.10",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-scss": "^4.0.0",
    "rollup-plugin-svg": "^2.0.0",
    "sass": "^1.68.0",
    "semantic-release": "^23.0.0",
    "storybook": "^7.4.6"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mindfiredigital/canvas-editor": "^1.0.5",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.5",
    "@r2wc/react-to-web-component": "^2.0.3",
    "@reduxjs/toolkit": "^1.9.5",
    "@storybook/preset-scss": "^1.0.3",
    "react-color": "^2.19.3",
    "react-redux": "^8.1.1",
    "react-router-dom": "^6.12.0",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "release": {
    "branches": [
      "fix/issue-56",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm", { "pkgRoot": "./dist" },
      [
        "@semantic-release/github",
        {
           "assets": [
              "package.json",
              "README.md",
              "CHANGELOG.md",
              "dist/**/*.{js}"
           ],
           "message": "chore: Release ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
             }
     ]
    ]
  }
}
